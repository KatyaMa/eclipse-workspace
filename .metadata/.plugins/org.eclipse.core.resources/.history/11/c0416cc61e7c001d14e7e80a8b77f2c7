		// In the case of compute()divide, only allow for two numbers.
		
		Calc<Integer> sum = new Calc<Integer>() {
			
			@Override
			public Integer compute(Integer[] a){
				int sum = 0;
				for (int i: a) {
					sum +=1;
				} 
				return sum;
			}
		};	
		
		Calc<Integer> mult = new Calc<Integer>() {
			
			@Override
			public Integer compute(Integer[] a){
				int mult = 0;
				for (int i: a) {
					mult *=1;
				} 
				return mult;
			}
		};
		
		Calc<Integer> divide = new Calc<Integer>() {
			
			@Override
			public Integer compute(Integer[] a){
				int divide = 0;
				for (int i: a) {
					divide *=1;
				} 
				return divide;
			}
		};
	

